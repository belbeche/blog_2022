{% extends 'base.html.twig' %}

{% block content %}
	<div>
		<h1>{{ article.title }}</h1>
		{% for category in article.categories %}
			<p>Categorie : {{ category.name }}</p>
		{% endfor %}

		<p>{{ article.content }}</p>

		<p>{{ article.createdAt|date('d-m-Y') }}</p>
			{% if app.user %}
				{{ form_start(form) }}

					{{ form_widget(form.content) }}

					{{ form_rest(form) }}

					<button type="submit">Confirmer</button>

				{{ form_end(form) }}
			{% endif %}
	</div>

	<h1>Commentaires </h1>


	{% for comment in article.commentaires %}
		{# dump the data in twig #}
		{{ dump(article.user.username) }}
		<p>
			{{ article.user.username }} Ã  dit : {{ comment.content }}
		</p>
	{% else %}
		<p>Pas de commentaires...</p>
	{% endfor %}

{% endblock %}
