{% extends 'base_back.html.twig' %}

{% block content %}

    <h1>Categorie</h1>

    <a href="{{ url('back_category_add') }}">Ajouter une nouvelle categorie</a>

    <table>
        <thead>
        <tr>
            <th>#</th>
            <th>Titre de la Categorie</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.name }}</td>
                <td>
                    <a href="{{ url('back_categories_show', {id: categorie.id }) }}">Voir</a>
                    <a href="{{ url('back_categories_edit', {id: categorie.id }) }}">Editer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(categories) }}
    </div>

{% endblock %}